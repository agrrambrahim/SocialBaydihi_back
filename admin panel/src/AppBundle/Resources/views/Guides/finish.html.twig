{% extends 'AppBundle::layout.html.twig' %}
{% block body %}

<div class="container">
	
    <div class="col-md-offset-1 col-sm-8">
    <div class="card">
        <div class="row bs-wizard" style="border-bottom:0;padding-top:20px">
			<div class="col-xs-4 bs-wizard-step complete">
				<div class="text-center bs-wizard-stepnum">Guide infos</div>
				<div class="progress"><div class="progress-bar"></div></div>
				<a class="bs-wizard-dot"></a>
			</div>
			
			<div class="col-xs-4 bs-wizard-step complete"><!-- complete -->
				<div class="text-center bs-wizard-stepnum">Guide steps</div>
				<div class="progress"><div class="progress-bar"></div></div>
				<a class="bs-wizard-dot"></a>
			</div>
			
			<div class="col-xs-4 bs-wizard-step active "><!-- complete -->
				<div class="text-center bs-wizard-stepnum">Complete</div>
				<div class="progress"><div class="progress-bar"></div></div>
				<a class="bs-wizard-dot"></a>
			</div>
		</div>
	</div>
    <div class="card">
        <div class="card-body card-padding"> 
        <center>
			<i class="zmdi zmdi-check-circle" style="font-size: 150pt;color: #21668e;"></i>
			<H2 style="color: #21668e;">YOU GUIDE HAS BEEN ADDED</H2>
			<h4><a href="{{path("app_guides_view",{id:guide.id})}}" title="">VIEW THIS GUIDE</a></h4>
        </center>
        </div>
    </div>
</div>

</div>
{% endblock %}